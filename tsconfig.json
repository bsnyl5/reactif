{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "es5",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": ".",
    "inlineSourceMap": false,
    "lib": [
      "dom",
      "es6"
    ],
    "paths": {
      "@oddx/reactive/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
